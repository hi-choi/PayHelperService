        $("#wonGetAccessToken").click(function() {
            $.ajax({
                type: "POST",
                url: "/users/wonGetAccessTokenCheck",
                data: {},
                success: function (data) {
                    if(data == 1) {
                        swal("Warning", "로그인 해주세요.",
