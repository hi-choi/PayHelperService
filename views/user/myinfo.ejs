                        goPage5();}})
                    } else if(data == 2) {
                        swal("Warning", "코인 지갑을 사용하시려면 access_token을 발급받으세요.",
                        {button:"확인",}).then((result)=>{if(result){
                        goPage8();}})
                    } else if(data == 3) {
                        swal("Warning", "인증 화면으로 이동합니다.",
                        {button:"확인",}).then((result)=>{if(result){
                            var tmpWindow = window.open("about:blank");
                            tmpWindow.location = "https://testapi.openbanking.or.kr/oauth/2.0/authorize?response_type=code&client_id=Cmah2jeXP3QU4h1l4yLDYvMU22RWMU4Et0obKyUq&redirect_uri=http://localhost:3000/users/wonGetAccessToken&scope=login inquiry transfer&state=12345678901234567890123456789012&auth_type=0";
