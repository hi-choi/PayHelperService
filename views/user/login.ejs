<!DOCTYPE html>
<html lang="en">



<head>
	<meta charset="UTF-8">
	<title>LogIn</title>
	<link rel="stylesheet" type="text/css" href="/css/login_style.css">
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>


<body>

	<% if(typeof flag1 != "undefined") { %>
	<script>
		swal("<%= flag1 %>")
	</script>
	<% } %>
	<% if(typeof flag2 != "undefined") { %>
	<script>
		swal("<%= flag2 %>")
	</script>
	<% } %>
	<% if(typeof flag3 != "undefined") { %>
	<script>
		swal("<%= flag3 %>")
	</script>
	<% } %>
	<center>
		<div class="payhelper_login">
		
		
			<form name="paging0">		
				<a href="javascript:goPage0();"><img src="/img/content/img_payhelperbig.png" weight="200px" height="100px"></a><br>			
			</form>
					
			<form action="/users/login" method="post">
				<h4><font size="5">로그인</h4>
				<input type="email" name="email" placeholder="E-mail" style="height:25px; margin-bottom:10px;"><br>
				<input type="password" name="password" placeholder="password" style="height:25px;"><br><br>
				<button id="loginBtn" input type="submit" class="btn_comm" value="Login"></button>
			</form>	
				
			<form action="/users/signup" method="get">
			
				<font size="2" weight="normal" color="#6E6E6E"</font>계정이 없는 경우
				<button id="signBtn" input type="submit" class="sign_comm" value="SignUp"></button><br>
			</form>
	
			<hr size="1px" width="300px" left="50%" right"50%" noshade>
			<img src="/img/content/img_producer.png" width="300px height="150px">
			
			<!--<img src="/img/content/img_producer.png" width="300px height="150px"> -->
		
		</div>
	</center>

	<!-- 계정이 없으신가요? <a href="/users/signup">회원가입</a> -->

	<script type="text/javascript">
		function goPage0() {
			var f = document.paging0;
			f.action = "/"
			f.method = "get"
			f.submit();
		}

	</script>



</body>

</html>